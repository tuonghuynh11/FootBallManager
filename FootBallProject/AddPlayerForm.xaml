<Window x:Class="FootBallProject.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootBallProject"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

        Title="AddPlayerForm" Height="550" Width="900"
        DataContext="{StaticResource TeamPlayersVM}"
        Name="AddPlayerForm">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="450"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Margin="100 10 100 450" Grid.ColumnSpan="2">
            <TextBlock FontSize="50" HorizontalAlignment="Center" Foreground="#ff3a12" FontFamily="{StaticResource MaterialDesignFont}">ADD PLAYER HERE</TextBlock>
            
        </Border>        
        <Grid Grid.Column="0">
            <!-- Height = 550 Width = 450-->
            <Border Margin="100 100 50 50">
                <StackPanel>
                    <TextBlock FontSize="30">Tên</TextBlock>
                    <TextBlock FontSize="30">Tuổi</TextBlock>
                    <TextBlock FontSize="30">CLB</TextBlock>
                    <TextBlock FontSize="30">Chiều cao</TextBlock>

                    <TextBlock FontSize="30">Cân nặng</TextBlock>

                    <TextBlock FontSize="30">Chân thuận</TextBlock>

                    <TextBlock FontSize="30">Sức khỏe</TextBlock>

                    <TextBlock FontSize="30">Quốc tịch</TextBlock>


                </StackPanel>
            </Border>
                
            
        </Grid>
        <Grid Grid.Column="1">
            <Border Margin="100 100 50 50">
                <StackPanel>
                    <TextBox FontSize="28" Height="40" Name="txbName"></TextBox>
                    <TextBox FontSize="28" Height="40" Name="txbAge"></TextBox>
                    <ComboBox FontSize="28" Height="40" Name="txbclub" IsEditable="True" SelectedValuePath="Content" ItemsSource="{Binding ClubsNames}"></ComboBox>
                    <TextBox FontSize="28" Height="40" Name="txbHeight"></TextBox>

                    <TextBox FontSize="28" Height="40" Name="txbWeight"></TextBox>

                    <ComboBox  FontSize="28" Height="40" Name="txbFoot" SelectedItem="{Binding Path=Left}" SelectedValuePath="Content">
                        <ComboBoxItem>
                            Left
                        </ComboBoxItem>
                        <ComboBoxItem>Right</ComboBoxItem>
                    </ComboBox>

                    <TextBox FontSize="28" Height="40" Name="txbPhysyque"></TextBox>
                    <ComboBox FontSize="28" Height="40" Name="txbNationality" SelectedValuePath="Content" ItemsSource="{Binding Nationalities}" ></ComboBox>


                </StackPanel>
            </Border>
            
        </Grid>
        
        <Button Grid.Column="1" Margin="30 450 230 10" Command="{Binding AddPlayerCommand2}" CommandParameter="{Binding ElementName=AddPlayerForm}" IsEnabled="True">Add</Button>
        
        <Button Grid.Column="1" Margin="250 450 40 10">Cancel</Button>



    </Grid>
</Window>
