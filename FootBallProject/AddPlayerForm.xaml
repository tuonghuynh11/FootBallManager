<Window x:Class="FootBallProject.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FootBallProject"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
       TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        
        WindowStyle="None"
        Background="#d3ffce"
       
        Title="AddPlayerForm" Height="680" Width="1400"
        DataContext="{StaticResource TeamPlayersVM}"
        Name="AddPlayerForm"
                WindowStartupLocation="CenterScreen" Loaded="AddPlayerForm_Loaded">
    <Window.Resources>
        <Style TargetType="TextBox">

            <Setter Property="Background" Value="White">

            </Setter>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="White">

            </Setter>
        </Style>
        <Style TargetType="Separator">
            <Setter Property="Visibility" Value="Hidden"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="450"></ColumnDefinition>
            <ColumnDefinition Width="450"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Margin="100 10 100 450" Grid.ColumnSpan="2">
            <TextBlock FontSize="50" HorizontalAlignment="Center"  FontFamily="Comic Sans MS">ADD PLAYER HERE</TextBlock>

        </Border>
        <Grid Grid.Column="0">
            <!-- Height = 550 Width = 450-->
            <Border Margin="100 100 50 50">
                <StackPanel>
                    <TextBlock FontSize="30">Tên</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">Tuổi</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">CLB</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">Chiều cao(cm)</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">Cân nặng(kg)</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">Chân thuận</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">Thể trạng</TextBlock>
                    <Separator></Separator>
                    <TextBlock FontSize="30">Vị trí</TextBlock>
                    <Separator></Separator>
                    <TextBlock FontSize="30">Số áo</TextBlock>
                    <Separator></Separator>

                    <TextBlock FontSize="30">Quốc tịch</TextBlock>
                    <Separator></Separator>
                    <TextBlock FontSize="30">Hình ảnh</TextBlock>

                </StackPanel>
            </Border>


        </Grid>
        <Grid Grid.Column="1">
            <Border Margin="100 100 50 50">
                <StackPanel>
                    <TextBox FontSize="28" Height="40" Name="txbName"></TextBox>
                    <Separator></Separator>
                    <TextBox FontSize="28" Height="40" Name="txbAge"></TextBox>
                    <Separator></Separator>
                    <ComboBox  FontSize="28" Height="40" Name="txbclub" IsEditable="True" SelectedValuePath="Content" ItemsSource="{Binding ClubsNames}"></ComboBox>
                    <Separator></Separator>
                    <TextBox FontSize="28" Height="40" Name="txbHeight"></TextBox>
                    <Separator></Separator>


                    <TextBox FontSize="28" Height="40" Name="txbWeight"></TextBox>
                    <Separator></Separator>

                    <ComboBox  FontSize="28" Height="40" Name="txbFoot" SelectedItem="{Binding Path=Trái}" SelectedValuePath="Content">
                        <ComboBoxItem>
                            Trái
                        </ComboBoxItem>
                        <ComboBoxItem>Phải</ComboBoxItem>
                    </ComboBox>
                    <Separator></Separator>

                    <TextBox FontSize="28" Height="40" Name="txbPhysyque"></TextBox>
                    <Separator></Separator>
                    <TextBox FontSize="28" Height="40" Name="txbPos" ></TextBox>
                    <Separator></Separator>
                    <TextBox FontSize="28" Height="40" Name="txbNumber" ></TextBox>
                    <Separator></Separator>

                    <ComboBox FontSize="28" Height="40" Name="txbNationality"   ItemsSource="{Binding Nationalities}" ></ComboBox>
                    <Separator ></Separator>
                    <TextBox FontSize="28" Height="40" Name="txbImage" IsReadOnly="True"></TextBox>

                    <Button Width="50" Background="LightGray" HorizontalAlignment="Right" Command="{Binding LoadImageCommand}" CommandParameter="{Binding ElementName=AddPlayerForm}">...</Button>



                </StackPanel>
            </Border>

        </Grid>
        <Grid Grid.Column="2">
            <Button x:Name="Close_but" Height="50" Width="50" VerticalAlignment="Top"
                        HorizontalAlignment="Right" Margin="0 10 5 0" BorderBrush="{x:Null}" Click="Close_but_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/Images/x_icon.png"/>
                </Button.Background>

            </Button>
            <Image x:Name = "cthimage" HorizontalAlignment="Center" Height="300"  
                       VerticalAlignment="Top" Width="300" Source="Images\default.png"/>
            <Button  Background="Orange"  Foreground="DarkRed" FontSize="22" Grid.Column="2" Margin="60 200 100 100" Width="200" Height="90" Command="{Binding LoadImageCommand}" CommandParameter="{Binding ElementName=AddPlayerForm}">Upload</Button>

        </Grid>
        

        <Button Background="LightBlue"  Foreground="DarkRed" FontSize="22" Grid.Column="2" Margin="60 500 100 00" Width="200" Height="90" Command="{Binding AddPlayerCommand2}" CommandParameter="{Binding ElementName=AddPlayerForm}" IsEnabled="True">Add</Button>





    </Grid>
</Window>
