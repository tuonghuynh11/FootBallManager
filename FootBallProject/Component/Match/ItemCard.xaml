<UserControl x:Class="FootBallProject.Component.Match.ItemCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FootBallProject.Component.Match"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="270">
    <Grid>
        <StackPanel Background="#fcfffa" Orientation="Horizontal">
            <ComboBox Width="150" Height="50" ItemsSource="{Binding ListPlayers }"
                      SelectedItem="{Binding Player, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                      >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding HOTEN}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBox Margin="6 0 0 0" Width="80" Height="50" Text="{Binding Time,UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"></TextBox>
            <Button Command="{Binding }" Background="Green">
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
